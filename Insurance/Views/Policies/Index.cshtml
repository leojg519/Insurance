@model IEnumerable<Insurance.Models.Policy>

@{
    ViewBag.Title = "Policies";
}

<br />
<div>
    @Html.ActionLink("< Home", "Index", "Insurance", null, htmlAttributes: new { @class = "btn btn-info" })
</div>
<br />

<p class="h2">
    Policies
    @Html.ActionLink("+ Add New", "Create", null, htmlAttributes: new { @class = "btn btn-primary pull-right" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coverages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoverPercentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoverMonths)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Risk)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @foreach (var coverage in item.Coverages)
                {
                    <p>
                        @Html.DisplayFor(modelItem => coverage.Type)
                    </p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverPercentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverMonths)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Risk)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-default" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
